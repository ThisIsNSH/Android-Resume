<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context="com.nora.nsh.me.FirstFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">


        <RelativeLayout
        android:layout_width="match_parent"
            android:visibility="visible"
            android:id="@+id/surface1"
            android:orientation="vertical"
        android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
android:elevation="4dp"
            android:foreground="@drawable/ripple11"
        android:background="@drawable/education"
        android:layout_height="180dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="education"
                android:id="@+id/education"
                android:elevation="6dp"
                android:textSize="45sp"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold|italic"
                />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:id="@+id/surface2"
            android:orientation="vertical"
            android:clickable="true"
            android:elevation="4dp"
            android:foreground="@drawable/ripple11"            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/call"
            android:layout_height="180dp">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="Contact"
    android:id="@+id/contact"
    android:elevation="6dp"
    android:textSize="45sp"
    android:textColor="#ffffff"
    android:textAllCaps="true"
    android:fontFamily="sans-serif-condensed"
    android:textStyle="bold|italic"
    />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:id="@+id/surface3"
            android:clickable="true"
            android:elevation="4dp"
            android:foreground="@drawable/ripple11"            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/quality"
            android:layout_height="180dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="qualities"
                android:id="@+id/qualities"
                android:elevation="6dp"
                android:textSize="45sp"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold|italic"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:id="@+id/surface4"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:elevation="4dp"
            android:foreground="@drawable/ripple11"           android:layout_marginBottom="8dp"
            android:background="@drawable/like"
            android:layout_height="180dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="likes"
                
                android:id="@+id/likes"
                android:elevation="6dp"
                android:textSize="45sp"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold|italic"
                />
        </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Designed and Developed by Nishant"
    android:textStyle="bold"
    android:textSize="17sp"
    android:visibility="gone"
    android:layout_margin="8dp"
    android:textAllCaps="true"
    android:fontFamily="sans-serif-condensed"
    android:textColor="#222222"/>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
